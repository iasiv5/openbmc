// AST2700 IASI-2700 BMC Board Device Tree

/dts-v1/;

#include "aspeed-g7.dtsi"

/ {
	model = "IASI AST2700 BMC";
	compatible = "iasi,ast2700-bmc", "aspeed,ast2700";

	aliases {
		serial4 = &uart5;
	};

	chosen {
		stdout-path = &uart5;
		bootargs = "console=ttyS4,115200n8";
	};

	memory@400000000 {
		device_type = "memory";
		reg = <0x4 0x00000000 0x0 0x40000000>; // 1GB @ 0x400000000
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		video_engine_memory: video {
			size = <0x0 0x04000000>; // 64MB
			alignment = <0x0 0x01000000>;
			compatible = "shared-dma-pool";
			reusable;
		};

		gfx_memory: framebuffer {
			size = <0x0 0x01000000>; // 16MB
			alignment = <0x0 0x01000000>;
			compatible = "shared-dma-pool";
			reusable;
		};
	};
};

&fmc {
	status = "okay";
	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "bmc";
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
#include "openbmc-flash-layout-128.dtsi"
	};
};

&spi1 {
	status = "okay";

	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "pnor";
		spi-rx-bus-width = <4>;
		spi-max-frequency = <100000000>;
	};
};

&spi2 {
	status = "okay";

	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "second-flash";
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
	};
};

// BMC Console: UART5 (ttyS4)
&uart5 {
	status = "okay";
};

// MAC0: RGMII interface
&mdio0 {
	status = "okay";

	ethphy0: ethernet-phy@0 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <0>;
	};
};

&mac0 {
	status = "okay";
	phy-mode = "rgmii-rxid";
	phy-handle = <&ethphy0>;
};

// MAC1: NC-SI interface
&mdio1 {
	status = "okay";

	ethphy1: ethernet-phy@0 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <0>;
	};
};

&mac1 {
	status = "okay";
	phy-mode = "ncsi";
	phy-handle = <&ethphy1>;
};

